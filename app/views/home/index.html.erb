<% if host_signed_in? %>
  <%= render 'host', locals: { guesthouse: @guesthouse } %>
<% elsif guest_signed_in? %>
  <%= render 'guest' %>
<% end %>
 
<% if @cities.present? %>
  <p> Veja pousadas em: </p>
  <% @cities.each do |city| %>
  <ul>
    <li><%= link_to city, cities_guesthouses_path(city: city)%></li>
  </ul>
  <% end %>
<% end %>

<p> Pousadas recentes </p>
<% @recent_guesthouses.each do |guesthouse| %> 
  <%= link_to "#{guesthouse.brand_name} - #{guesthouse.city}", guesthouse %></br>
<% end %>

<p> Demais pousadas </p>
<% @other_guesthouses.each do |guesthouse| %> 
  <%= link_to "#{guesthouse.brand_name} - #{guesthouse.city}", guesthouse %></br>
<% end %>

<% if @guesthouses.empty? %> 
    <p>NÃ£o existem pousadas cadastrados.</p>
<% end %>