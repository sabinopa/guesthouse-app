<% if(@custom_price.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @custom_price.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with (model: [@room.guesthouse, @room, @custom_price]) do |f| %>
<div>
  <%= f.label :start_date, 'Início' %>:
  <%= f.date_field :start_date %>
</div>

<div>
  <%= f.label :end_date, 'Fim' %>:
  <%= f.date_field :end_date %>
</div>

<div>
  <%= f.label :price, 'Preço no período' %>:
  <%= f.number_field :price %>
</div>

  <%= f.submit 'Salvar' %>
<% end %>