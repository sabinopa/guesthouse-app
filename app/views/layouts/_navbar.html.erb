<nav>
  <h1><%= link_to 'Pousadaria', root_path %></h1>
  <%= form_with(url: search_guesthouses_path, method: :get) do |f| %>
  <%= f.label :query, 'Buscar Pousada' %>
  <%= f.text_field :query %>
  <%= f.submit 'Buscar' %>
<% end %>
  <div>
    <% if host_signed_in? %>
      <%= current_host.description %> 
      <%= button_to 'Sair', destroy_host_session_path, method: :delete %> 
    <% else %>
      <%= link_to 'Entrar como Anfitrião', new_host_session_path %>
    <% end %>
    </div>
    <div>
    <% unless host_signed_in? %>
      <% if guest_signed_in? %>
        <%= current_guest.description %> 
        <%= button_to 'Sair', destroy_guest_session_path, method: :delete %> 
      <% else %>
        <%= link_to 'Entrar como Hóspede', new_guest_session_path %>
      <% end %>
    <% end %>
    </div>
</nav>
